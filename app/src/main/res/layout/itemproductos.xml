<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_margin="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:contentPadding="6dp">

    <RelativeLayout
        android:layout_width="359dp"
        android:layout_height="178dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/item_imagen"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/item_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/item_imagen"
            android:layout_toRightOf="@id/item_imagen"
            android:text="Producto"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_cod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_titulo"
            android:layout_toEndOf="@id/item_imagen"
            android:layout_toRightOf="@id/item_imagen"
            android:text="Codigo"
            android:textColor="@color/black"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/item_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_cod"
            android:layout_toEndOf="@id/item_imagen"
            android:layout_toRightOf="@id/item_imagen"
            android:text="valor"
            android:textColor="@color/black"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/item_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_valor"
            android:layout_toEndOf="@id/item_imagen"
            android:layout_toRightOf="@id/item_imagen"
            android:text="Categoria"
            android:textColor="@color/black"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/item_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_cat"
            android:layout_toEndOf="@id/item_imagen"
            android:layout_toRightOf="@id/item_imagen"
            android:text="Cantidad"
            android:textColor="@color/black"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_cantidad"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="209dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:text="Comprar" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>